@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    bool isAuthenticated = ViewBag.IsAuthenticated != null && (bool)ViewBag.IsAuthenticated;
    var user = HttpContextAccessor.HttpContext.User;
    var imageSrc = "~/user.png";

    if (user.Identity.IsAuthenticated)
    {
        var editProfileVM = ViewData["EditProfileVM"] as DiagnosisSystem.Models.EditProfileVM;
        if (editProfileVM?.ImageData != null && editProfileVM.ImageData.Length > 0)
        {
            var imageBase64 = Convert.ToBase64String(editProfileVM.ImageData);
            imageSrc = $"data:{editProfileVM.ImageType};base64,{imageBase64}";
        }
    }
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QURE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DiagnosisSystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="/css/Patient/answers.css">
    <link rel="stylesheet" type="text/css" href="/css/Admin/sidebar.css">
    <script src="~/js/Admin/doctors.js"></script>
</head>

<body>
    <header class="container">
        <div class="sidebar">

                <br><br>

                <div class="profile-picture">
                    <a asp-action="Index" asp-controller="Admin"><img src="https://i.imgur.com/siyPD5C.png" alt="Profile Picture"></a>
                </div>
                <p class="profile-name"></p>

                <a href="#section1" class="section">STAFF MANAGEMENT</a>
                <ul class="sub-sections">
                    <li>
                        <a href="#doctorsInformation">Doctors Information</a>
                        <ul class="sub-sub-sections">
                            <li><a asp-action="Requests" asp-controller="Admin" class="a">View Pending Registrations</a></li>
                        </ul>
                    </li>
                </ul>

                <a href="#section2" class="section">SPECIALTIES MANAGEMENT</a>
                <ul class="sub-sections" id="section2">
                    <li>
                        <a href="#Specielties">Specialties</a>
                        <ul class="sub-sub-sections">
                            <li><a asp-action="Speciality" asp-controller="Admin">Register new specialty</a></li>
                            <li><a asp-action="ViewSpecialities" asp-controller="Admin">List of all specialties</a></li>
                            <li><a asp-action="Tag" asp-controller="Admin">Add Tag</a></li>
                            <li><a asp-action="ViewTags" asp-controller="Admin">View All Tags</a></li>
                        </ul>
                    </li>
                </ul>

                <a href="#section3" class="section">MANAGE ADMINISTRATORS</a>
                <ul class="sub-sections">
                    <li>
                        <a href="#Administrators">Administrators</a>
                        <ul class="sub-sub-sections">
                            <li><a asp-action="CreateAdmin" asp-controller="Account">Add Administrator</a></li>
                            <li><a asp-action="Admins" asp-controller="Admin">Registered Administrators</a></li>
                        </ul>
                    </li>
                </ul>
                <br><br>
                <br><br>
                <br><br>
                <br><br>

                <!-- Logout button -->
                <a asp-action="Logout" asp-controller="Account" class="logout" style="    background-color: #f03e3e;
    color: white;
    border: none;
    padding: 10px 10px;
    text-align: center;
    text-decoration: none;
    display: inline-block; margin-left: 100px;
    font-size: 16px;
    cursor: pointer;
    border-radius: 5px;">Logout</a>
            </div>
       
    </header>

    <div class="container mt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
