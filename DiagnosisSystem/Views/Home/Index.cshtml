@{
    ViewData["Title"] = "Home Page";
}

<head>
    <title>@ViewData["Title"] QURE</title>
    <link rel="stylesheet" href="/css/Home/Index.css">
    <script src="~/js/Home/Index.js"></script>
</head>

<body>
    <div class="container mt-5">
        <div class="jumbotron text-center">
            <h1 class="display-4">Welcome to QURE</h1>
            <p class="lead">Crafting Health Solutions One Click at a Time.</p>
        </div>
    </div>
    <div class="login-container-wrapper">
        <div class="login-container">
            <div class="login-text">Register as</div>

            <div>
                <a type="button" class="user-box" asp-controller="Account" asp-action="Register"> Patient </a>
            </div>

            <div>
                <a type="button" class="user-box" asp-controller="Account" asp-action="doctorRegister"> Medical Practitioner </a>
            </div>

            <div class="separator-line"></div>

            <div>
                <p class="userr-box">Already have an account? <a asp-controller="Account" asp-action="Login">Login</a></p>
            </div>
        </div>
    </div>
</body>
