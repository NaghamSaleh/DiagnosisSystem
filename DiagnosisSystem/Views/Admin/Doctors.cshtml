@model List<DoctorRegisterVM>

<link rel="stylesheet" type="text/css" href="/css/Admin/doctors.css">
<script src="~/js/Admin/octors.js"></script>

<div class="container">
    <div class="sidebar">
        <div class="profile-picture">
            <img src="https://i.imgur.com/siyPD5C.png" alt="Profile Picture">
        </div>
        <p class="profile-name">Nagham Saleh</p>

        <a href="#section1" class="section">STAFF MANAGEMENT</a>
        <ul class="sub-sections">
            <li>
                <a href="#doctorsInformation">Doctors Information</a>
                <ul class="sub-sub-sections">
                    <li><a asp-action="Doctors" asp-controller="Admin" class="a">View Pending Registrations</a></li>
                </ul>
            </li>
        </ul>

        <a href="#section2" class="section">SPECIALTIES MANAGEMENT</a>
        <ul class="sub-sections">
            <li>
                <a href="#Specielties">Specialties</a>
                <ul class="sub-sub-sections">
                    <li><a asp-action="Speciality" asp-controller="Admin">Register new specialty</a></li>
                    <li><a asp-action="ViewSpecialities" asp-controller="Admin">List of all specialties</a></li>
                    <li><a asp-action="Tag" asp-controller="Admin">Add Tag</a></li>
                </ul>
            </li>
        </ul>

        <a href="#section3" class="section">MANAGE ADMINISTRATORS</a>
        <ul class="sub-sections">
            <li>
                <a href="#Administrators">Administrators</a>
                <ul class="sub-sub-sections">
                    <li><a href="#AddAdministrator">Add Administrator</a></li>
                    <li><a href="#RegisteredAdministrators">Registered Administrators</a></li>
                </ul>
            </li>
        </ul>
</div>
</div>

    <h1>Doctors Pending Registrations</h1>

    <table>

        <thead>
            <tr>
                <th>Name</th>
                <th>Specialty</th>
                <th>Current Hospital</th>
                <th>Email</th>
                <th>Gender</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName @user.LastName</td>
                    <td>@user.Specialty</td>
                    <td>@user.CurrentHospital</td>
                    <td>@user.Email</td>
                    <td>@user.Gender</td>
                    <td class="action-column">
                        <a asp-action="Approve" asp-route-userId="@user.UserID" class="b">Approve</a>
                        <a asp-action="Reject" asp-route-userId="@user.UserID" class="b">Reject</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>




<script>
    document.addEventListener('DOMContentLoaded', function () {
        var sections = document.querySelectorAll('.section');
        var subSections = document.querySelectorAll('.sub-sections');

        sections.forEach(function (section) {
            section.addEventListener('click', function () {
                var subSectionsList = this.nextElementSibling;
                subSectionsList.style.display = subSectionsList.style.display === 'none' ? 'block' : 'none';
            });
        });

        subSections.forEach(function (subSections) {
            subSections.addEventListener('click', function () {
                var subSubSectionsList = this.querySelector('.sub-sub-sections');
                subSubSectionsList.style.display = subSubSectionsList.style.display === 'none' ? 'block' : 'none';
            });
        });
    });
</script>
