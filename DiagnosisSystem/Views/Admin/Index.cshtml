@model List<DoctorRegisterVM>

<table border="1">
    <thead>
        <tr>
            <th>User Id</th>
            <th>Name</th>
            <th>Specialty</th>
            <th>Current Hospital</th>
            <th>Email</th>
            <th>Gender</th>
            <!--Add other data-->
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserID</td>
                <td>@user.FirstName  @user.LastName</td>
                <td>@user.Specialty</td>
                <td>@user.CurrentHospital</td>
                <td>@user.Email</td>
                <td>@user.Gender</td>
                <!-- Add other table cells for additional properties -->
                <td>
                    <!-- Action buttons -->
                    <a asp-action="Approve" asp-route-userId="@user.UserID" >Approve</a>
                    <a asp-action="Reject" asp-route-userId="@user.UserID">Reject</a>
                    
                </td>
            </tr>
        }
    </tbody>
</table>