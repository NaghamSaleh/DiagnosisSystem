            </li>
        </ul>

        <a href="#section3" class="section">MANAGE ADMINISTRATORS</a>
        <ul class="sub-sections">
            <li>
                <a href="#Administrators">Administrators</a>
                <ul class="sub-sub-sections">
                    <li><a asp-action="CreateAdmin" asp-controller="Account">Add Administrator</a></li>
                    <li><a asp-action="Admins" asp-controller="Admin">Registered Administrators</a></li>
                </ul>
            </li>
        </ul>

        <!-- Logout button -->
        <a asp-action="Logout" asp-controller="Account" id="logoutButton" style="color: white;">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#FFFFFF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21 12h-6M3 12h16M7 16l-4-4 4-4" />
            </svg>
            Logout
        </a>
    </div>
</div>

