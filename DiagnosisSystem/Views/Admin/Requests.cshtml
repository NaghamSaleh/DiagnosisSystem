@model List<RegisterVM>

<link rel="stylesheet" type="text/css" href="/css/Admin/doctors.css">
<script src="~/js/Admin/doctors.js"></script>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@Html.Partial("~/Views/Shared/_RequestModal.cshtml");


<br><br>
<h1>Doctors Pending Registrations</h1>
<table>

    <thead>
        <tr>
            <th>Name</th>
            <th>Specialty</th>
            <th>Current Hospital</th>
            <th>Email</th>
            <th>Gender</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName @user.LastName</td>
                <td>@user.Speciality</td>
                <td>@user.CurrentHospital</td>
                <td>@user.Email</td>
                <td>@user.Gender</td>
                <td class="action-column">
                    <a asp-action="Approve" asp-route-userId="@user.UserID" class="b approve-form">Approve</a>
                    <a asp-action="Reject" asp-route-userId="@user.UserID" class="b reject-form">Reject</a>
                </td>
            </tr>
        }
    </tbody> 
</table>
@section scripts {
    <script src="~/js/Admin/RequestModal.js"></script>
}
