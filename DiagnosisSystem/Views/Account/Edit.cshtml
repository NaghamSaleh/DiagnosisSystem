@model EditProfileVM
@{
    ViewData["Title"] = "Edit Profile";
}

<link rel="stylesheet" type="text/css" href="/css/Patient/edit.css">

<h1>Edit Profile</h1>

<header class="header">
    <div class="brand"> 
        <a href="https://naghammzs02.wordpress.com/" style="text-decoration: none; color: inherit;">Qure</a>
    </div>

    <nav class="choices">
        <a asp-action="Index" asp-controller="Analytics">Analytics</a>
        <a asp-action="MyAccount" asp-controller="Account" class="account-link">
            <img src="https://i.imgur.com/mFIq1e0.png" alt="My Account" class="account-icon">
        </a>

    </nav>
</header>



<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="myaccountcontainer" id="myAccount-container">
        <input type="hidden" name="Email" value="@Model.Email">
        <div class="info-item">
            <span class="info-label">Profile Picture:</span>
            <input type="file" name="ImageFile" accept="image/*">
        </div>

        <div class="info-item">
            <span class="info-label">Full Name:</span>
            <input type="text" name="FirstName" value="@Model.FirstName"> <input type="text" name="LastName" value="@Model.LastName">
        </div>

        <div class="info-item">
            <span class="info-label">Email:</span>
            <span class="info-value">@Model.Email</span>
        </div>

        <div class="info-item">
            <span class="info-label">Gender:</span>
            <input type="text" name="Gender" value="@Model.Gender">
        </div>

        <div class="info-item">
            <span class="info-label">Telephone:</span>
            <input type="text" name="Telephone" value="@Model.Telephone">
        </div>

        <button type="submit">Save</button>
    </div>
</form>
