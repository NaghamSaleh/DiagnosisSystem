@model AnswerDTO

@{
    ViewData["Title"] = "Answer Query";
}
<link rel="stylesheet" type="text/css" href="/css/Doctor/Answer.css">

<header class="header">
    <div class="brand">Qure</div>


    <nav class="choices">
        <a asp-action="Queries" asp-controller="Doctor">User Queries</a>
        <a asp-action="Forum" asp-controller="Doctor">Doctors Forum</a>
        <a asp-action="" asp-controller="Doctor">Analytics</a>
        <a asp-action="MyAccount" asp-controller="Patient" class="account-link">
            <img src="https://i.imgur.com/69kGIrt.png" alt="My Account" class="account-icon">
        </a>


    </nav>
</header>
<h2>Answer Query</h2>

<div readonly>
    
    <label asp-for="Query.QueryTitle" class="control-label">Query:</label>
    <input asp-for="Query.QueryTitle" class="form-control">
    Description: @Model.Query.Description
    Votes: @Model.Query.Votes

</div>


<form method="post">
    <input hidden asp-for="QueryId" value="@Model.Query.Id" />
<div>
    <label class="control-label">Answer Body:</label>
    <textarea asp-for="AnswerBody" class="form-control" rows="4"></textarea>
</div>

<div class="form-group">
    <button type="submit" asp-controller="Doctor" asp-action="Answer"  class="btn btn-primary">Submit Answer</button>
</div>
</form>