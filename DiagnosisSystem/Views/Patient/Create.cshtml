@model DiagnosisSystem.Models.QueryVM
<link rel="stylesheet" type="text/css" href="/css/Patient/create.css">
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create New Query";
    var tags = ViewBag.tags as List<string>;
    
}

<div>
    <div class="transparent-container">
        <h1>Create New Query</h1>

        <form asp-controller="Patient" asp-action="Create" method="post" class="patient-form">

            <div class="form-group">
                <label asp-for="QueryTitle"></label>
                <input asp-for="QueryTitle" class="form-control" />
                <span asp-validation-for="QueryTitle" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="QuestionTag">Question Tag</label>
                <select asp-for="QuestionTag" name="QuestionTag" class="form-control">
                    <option value="">Select Tag</option>
                    @foreach (var tag in tags)
                    {
                        <option value="@tag">@tag</option>
                    }
                </select>
            </div>
            
            <button type="submit" class="btn btn-primary" >Submit</button>
        </form>
    </div>
</div>
