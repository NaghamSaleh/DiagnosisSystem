@model List<DiagnosisSystem.Models.QueryVM>

<link rel="stylesheet" type="text/css" href="/css/Patient/queries.css">

<header class="header">
    <div class="brand">Qure</div>

    <nav class="choices">
        <a asp-action="Queries" asp-controller="Patient">User Queries</a>
        <a asp-action="Consultants" asp-controller="Patient">Paid consultancy</a>
        <a asp-action="Analytics" asp-controller="Patient">Analytics</a>
        <a asp-action="MyAccount" asp-controller="Patient" class="account-link">
            <img src="https://i.imgur.com/mFIq1e0.png" alt="My Account" class="account-icon">
        </a>

    </nav>
</header>

<h2>Queries</h2>

<!-- Create Query Button -->
<a asp-action="Create" asp-controller="Patient" class="btn btn-primary mb-3" style="background-color: #FF9F47;">Create Query</a>

@if (Model != null && Model.Any())
{
    <table class="queries-table">
        <thead>
            <tr>
                <th>Votes</th>
                <th>Upvote?</th>
                <th>Number of Answers</th>
                <th>Question</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var query in Model)
            {
                <tr>
                    <td>@query.Votes</td>
                    <td>
                        <form asp-action="Upvote" asp-controller="Patient" method="post">
                            <input type="hidden" name="queryId" value="@query.Id" />
                            <button type="submit">Upvote</button>
                        </form>
                    </td>
                    <td>@query.AnswerCount</td>
                    <td>
                        <div>
                            <span class="query-title" onclick="window.location.href = '@Url.Action("Answers", "Patient", new { id = query.Id })'">@query.QueryTitle</span>
                        </div>
                    </td>
                    
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No queries found.</p>
}
