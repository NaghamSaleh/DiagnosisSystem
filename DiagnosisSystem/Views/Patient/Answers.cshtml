@model QueryVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="containerx">
    <h1>Query Information</h1>
    <div>
        <label for="queryTitle">Query Title:</label>
        <input type="text" id="queryTitle" value="@Model.QueryTitle" readonly>
    </div>
    <div>
        <label for="consultancyType">Consultancy Type:</label>
        <input type="text" id="consultancyType" value="@Model.ConsuntacyType" readonly>
    </div>
    <div>
        <label for="description">Description:</label>
        <textarea id="description" readonly>@Model.Description</textarea>
    </div>
    <div>
        <label for="questionTag">Question Tag:</label>
        <input type="text" id="questionTag" value="@Model.QuestionTag" readonly>
    </div>
    <div>
        <label for="votes">Votes:</label>
        <input type="text" id="votes" value="@Model.Votes" readonly>
    </div>
    <div class="answers-container">
        <h2>Answers:</h2>
        @foreach (var answer in Model.Answers)
        {
            <div class="doctor">
                <h5>Answered by:</h5><p>@answer.DoctorName</p>
            </div>
            <div class="answer">
                <p>@answer.AnswerBody</p>
            </div>

        }
    </div>
</div>