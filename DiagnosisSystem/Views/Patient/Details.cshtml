@model PaidConsultancy
@{
    var tags = ViewBag.tags as List<string>;
}
<!DOCTYPE html>
<html>
<script>
    // Assume this is the logic that handles the payment
    function processPayment() {
        // Your payment processing logic here...

        // Show the modal on successful payment
        $('#paymentSuccessModal').modal('show');
    }
</script>

<head>
    <title>Doctor Details</title>
    <link rel="stylesheet" type="text/css" href="/css/Patient/details.css">
</head>
<body>
    <header class="header">
        <div class="brand">
            <a href="https://naghammzs02.wordpress.com/" style="text-decoration: none; color: inherit;">Qure</a>
        </div>
        <nav class="choices">
            <a asp-action="Queries" asp-controller="Patient">User Queries</a>
            <a asp-action="Consultants" asp-controller="Patient">Paid consultancy</a>
            <a asp-action="Index" asp-controller="Analytics">Analytics</a>
            <a asp-action="MyAccount" asp-controller="Patient" class="account-link">
                <img src="https://i.imgur.com/mFIq1e0.png" alt="My Account" class="account-icon">
            </a>
        </nav>
    </header>

    <h1>Doctor Details</h1>

    <div>
        <h3>Full Name: @($"{Model.DoctorDTO.FirstName} {Model.DoctorDTO.LastName}")</h3>
        <p class="transparent-container">Specialty: @Model.DoctorDTO.Speciality</p>
        <p class="transparent-container">Short Bio: @Model.DoctorDTO.ShortBio</p>
        <p class="transparent-container">Experience: @Model.DoctorDTO.Experience</p>
        <p class="transparent-container">Languages: @Model.DoctorDTO.Languages</p>
    </div>
   
        <button type="button" class="btn btn-primary" onclick="processPayment()">Pay Consultation Fees</button>



    <div class="modal fade" id="paymentSuccessModal" tabindex="-1" aria-labelledby="paymentSuccessModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    Your payment was successful.
                    <form asp-controller="Patient" asp-action="AskDoctor" method="post">
                        <input type="hidden" asp-for="@Model.DoctorDTO.Id"/>
                        <div class="mb-3">
                            <label asp-for="@Model.QueryVM.QueryTitle" class="form-label">Title</label>
                            <input type="text" class="form-control" asp-for="@Model.QueryVM.QueryTitle">
                        </div>
                        <div class="mb-3">
                            <label asp-for="@Model.QueryVM.Description" class="form-label">Body</label>
                            <textarea class="form-control" asp-for="@Model.QueryVM.Description" rows="3"></textarea>
                        </div>
                        <div class="form-group">
                        <label asp-for="@Model.QueryVM.QuestionTag"></label>
                            <select asp-for="@Model.QueryVM.QuestionTag" class="form-control">
                                @foreach (var tag in tags)
                                    {
                                    <option value="@tag">@tag</option>
                                    }
                            </select>
                        <span asp-validation-for="@Model.QueryVM.QuestionTag" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Ask Question</button>
                    </form>
                </div>

            </div>
        </div>
    </div>

</body>
</html>
