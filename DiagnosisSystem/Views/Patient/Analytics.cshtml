<!DOCTYPE html>
<html>

<head>
    <title>Doctors per Specialty</title>
    <link rel="stylesheet" type="text/css" href="/css/Patient/Analyticss.css">

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>

    <header class="header">
        <div class="brand">Qure</div>


        <nav class="choices">
            <a asp-action="Queries" asp-controller="Patient">User Queries</a>
            <a asp-action="Consultants" asp-controller="Patient">Paid consultancy</a>
            <a asp-action="Analytics" asp-controller="Patient">Analytics</a>
            <a asp-action="MyAccount" asp-controller="Patient" class="account-link">
                <img src="https://i.imgur.com/mFIq1e0.png" alt="My Account" class="account-icon">
            </a>

        </nav>
    </header>

    @{
        // Convert ViewBag.YAxis to a list or array
        var yAxisList = ViewBag.YAxis as List<AnalyticsDTO>;
        var yAxisArray = yAxisList?.ToArray();
    }
    <canvas id="barChart" width="800" height="400"></canvas>
    <script>
        
        var specialties = @Html.Raw(Json.Serialize(ViewBag.Specialties));
        var yAxis = @Html.Raw(Json.Serialize(yAxisArray.Select(y => y.Count)));

        var ctx = document.getElementById('barChart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: specialties.map(s => s.SpecialtyName),
                datasets: [{
                    label: 'Doctors per Specialty',
                    data: yAxis,
                    backgroundColor: 'rgba(54, 162, 235, 0.5)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1 // Skip count by 1
                        }
                    }
                }
            }
        });
    </script>
</body>
</html>