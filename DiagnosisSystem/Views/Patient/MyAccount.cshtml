@model EditProfileVM
<link rel="stylesheet" type="text/css" href="/css/Patient/MyAccount.css">



<div class="myaccountcontainer">
    <h1>My Account Information</h1>

    <div class="info-item">
        <span class="info-label">Full Name:</span>
        <span class="info-value">@Model.FirstName @Model.LastName</span>
    </div>

    <div class="info-item">
        <span class="info-label">Email:</span>
        <span class="info-value">@Model.Email</span>
    </div>

    <div class="info-item">
        <span class="info-label">Gender:</span>
        <span class="info-value">@Model.Gender</span>
    </div>

    <div class="info-item">
        <span class="info-label">Telephone:</span>
        <span class="info-value">@Model.Telephone</span>
    </div>
</div>

<header class="header">
    <div class="brand">Qure</div>

    <nav class="choices">
        <a asp-action="Queries" asp-controller="Patient">User Queries</a>
        <a asp-action="" asp-controller="Patient">Paid consultancy</a>
        <a asp-action="" asp-controller="Patient">Contact us</a>
        <a asp-action="" asp-controller="Patient">Analytics</a>
        <a asp-action="MyAccount" asp-controller="Patient">My account</a>

    </nav>
</header>